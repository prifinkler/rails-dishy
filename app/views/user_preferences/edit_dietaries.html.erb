<div class="container edit-pref">
  <div>
      <h2>Any dietary requirements?</h2>
      <%= simple_form_for(@user, url: update_user_dietaries_path, method: :patch) do |f| %>
        <%= f.association :dietaries, collection: Dietary.all,
                          as: :check_boxes,
                          input_html: { class: "tag-selector" },
                          item_wrapper_class: 'tag-item',
                          label_method: :dietary_type,
                          value_method: :id,
                          legend_tag: false %>
        <%= link_to "Previous", edit_user_cuisines_path, method: :get, class: "main-btn" %>
        <%= f.submit "Continue", class: "main-btn" %>
      <% end %>
  </div>
</div>
